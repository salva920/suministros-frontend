{
  "version": 2,
  "builds": [
    {
      "src": "ferreteria-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "ferreteria-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "ferreteria-backend/server.js" // ✅ Rutea /api/* al backend
    },
    {
      "src": "/(.*)",
      "dest": "ferreteria-frontend/build/$1" // ✅ Sirve el frontend
    }
  ]
}
