{
  "version": 2,
  "builds": [
    {
      "src": "ferreteria-backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["ferreteria-backend/**/*"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "ferreteria-backend/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ]
}
