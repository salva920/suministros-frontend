{
  "version": 2,
  "build": {
    "env": {
      "NODE_VERSION": "18" // Versi√≥n de Node.js para el backend
    },
    "output": "ferreteria-frontend/build" // Ruta del build del frontend
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "ferreteria-frontend/ferreteria-backend/server.js", 
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": {
        "Access-Control-Allow-Origin": "https://suministros-frontend.vercel.app"
      }
    },
    {
      "src": "/(.*)",
      "dest": "ferreteria-frontend/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
}
