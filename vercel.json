{
  "version": 2,
  "builds": [
    {
      "src": "ferreteria-frontend/ferreteria-backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["ferreteria-frontend/ferreteria-backend/**/*"]
      }
    },
    {
      "src": "ferreteria-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "ferreteria-frontend/ferreteria-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "ferreteria-frontend/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
}
