{
  "version": 2,
  "builds": [
    {
      "src": "ferreteria-frontend/ferreteria-backend/server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["ferreteria-frontend/ferreteria-backend/**/*.js"],
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "ferreteria-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "ferreteria-frontend/ferreteria-backend/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://suministros-frontend.vercel.app"
      }
    },
    {
      "src": "/(.*)",
      "dest": "ferreteria-frontend/build/$1"
    }
  ]
}
